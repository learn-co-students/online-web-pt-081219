<h1>Update this post</h1>

<form method="POST" action="/posts/<%= @post.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p><label for="title">Title</label><input type="text" name="title" value="<%=@post.title %>"></p>
    <p><label for="author">Author</label><input type="text" name="author" value="<%=@post.author %>"></p>
    <p><label for="body">Body</label><input type="text" name="body" value="<%=@post.body %>" </p>
    <p><input type="submit"><p>
</form>
