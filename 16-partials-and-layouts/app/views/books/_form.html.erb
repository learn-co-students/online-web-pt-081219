<%= form_for book do |f| %>
    <p>
	<%= f.label :title %>
	<%= f.text_field :title %>
    </p>
    <p>
	<%= f.fields_for :author do |author| %>
	    <%= author.label :author %>
	    <%= author.text_field :name %>
	<% end %>
    </p>
    <p>
	<%= f.fields_for :genre do |genre| %>
	    <%= genre.label :genre %>
	    <%= genre.text_field :name %>
	<% end %>
    </p>
    <%= f.submit %>
<% end %>
